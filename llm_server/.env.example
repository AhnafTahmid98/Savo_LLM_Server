# --- runtime mode ---
SAVO_ENV=dev
ROBOT_NAME=Robot Savo
LANGUAGE=en

# --- Tier1 (online / OpenRouter) ---
OPENROUTER_API_KEY=sk-your-key-here
TIER1_REASONING_MODEL=deepseek/deepseek-chat-v3.1
TIER1_REPLY_MODEL=meta-llama/llama-3.3-8b-instruct
TIER1_TIMEOUT_S=1.8
ALLOW_TIER1_ONLINE=true
WEB_ACCESS_ALLOWED=true

# --- Tier2 (local llama-cpp) ---
TIER2_MODEL_PATH=./models/local_model.gguf
TIER2_THREADS=6
ALLOW_TIER2_LOCAL=true

# --- Robot state data ---
MAP_DATA_DIR=./app/map_data
MAX_USER_TEXT_LEN=200
MAX_NAV_GOAL_WORDS=4
